 	update_bootargs_cmd("resetreason", value);
+
+	/* Update the special mode in bootargs */
+	if (reset_reason & POWERON_RESET_BIT && is_mfg_mode_phy_req())
+		update_bootargs_cmd("special", "mfg");
+	else
+		update_bootargs_cmd("special", NULL);
+}
